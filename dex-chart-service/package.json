{
  "name": "opn-dex-analytics",
  "version": "1.0.0",
  "private": true,
  "description": "Professional DEX analytics platform for OpenBNB - Real-time charts, honeypot detection, and comprehensive token analysis",
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"yarn dev:backend\" \"yarn dev:frontend\"",
    "dev:backend": "concurrently \"yarn dev:indexer\" \"yarn dev:api\" \"yarn dev:ws\"",
    "dev:frontend": "cd frontend && yarn dev",
    "dev:indexer": "tsx watch backend/indexer/index.ts",
    "dev:api": "tsx watch backend/api/server.ts",
    "dev:ws": "tsx watch backend/websocket/server.ts",
    "build": "yarn build:backend && yarn build:frontend",
    "build:backend": "tsc -p tsconfig.backend.json",
    "build:frontend": "cd frontend && yarn build",
    "start": "docker-compose up -d",
    "stop": "docker-compose down",
    "clean": "rm -rf node_modules **/node_modules dist frontend/.next logs",
    "db:init": "psql -h localhost -U postgres -d dex_charts -f backend/database/schema.sql",
    "db:migrate": "psql -h localhost -U postgres -d dex_charts -f backend/database/migrations/*.sql",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "cypress run"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.6.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^6.0.0",
    "@types/jest": "^29.5.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.4",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "concurrently": "^8.2.2",
    "cypress": "^13.6.1",
    "eslint": "^8.55.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "ts-jest": "^29.4.5",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/backend"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "backend/**/*.ts",
      "!backend/**/*.d.ts",
      "!backend/**/*.test.ts",
      "!backend/**/__tests__/**"
    ]
  }
}
