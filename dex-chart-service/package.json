{
  "name": "dex-chart-service",
  "version": "1.0.0",
  "private": true,
  "description": "Real-time DEX chart service with blockchain indexing",
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"yarn dev:backend\" \"yarn dev:frontend\"",
    "dev:backend": "concurrently \"yarn dev:indexer\" \"yarn dev:api\" \"yarn dev:ws\"",
    "dev:frontend": "cd frontend && yarn dev",
    "dev:indexer": "tsx watch backend/indexer/index.ts",
    "dev:api": "tsx watch backend/api/server.ts",
    "dev:ws": "tsx watch backend/websocket/server.ts",
    "build": "yarn build:backend && yarn build:frontend",
    "build:backend": "tsc",
    "build:frontend": "cd frontend && yarn build",
    "start": "docker-compose up -d",
    "stop": "docker-compose down",
    "clean": "rm -rf node_modules **/node_modules dist frontend/.next",
    "db:init": "psql -h localhost -U postgres -d dex_charts -f backend/database/init.sql",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "dependencies": {
    "ethers": "^6.9.0",
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.6.1",
    "pg": "^8.11.3",
    "ioredis": "^5.3.2",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/express": "^4.17.21",
    "@types/pg": "^8.10.9",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/express-rate-limit": "^6.0.0",
    "typescript": "^5.3.3",
    "tsx": "^4.6.2",
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "prettier": "^3.1.1",
    "eslint": "^8.55.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}